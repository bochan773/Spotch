<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spotch.View.SignupPage">
  <ContentPage.Content>
    <StackLayout VerticalOptions="Center">
      <Label Text="Welcome to Spotch!" FontSize="30" Margin="20" />
      <Label Text="Creat a new account" FontSize="20" Margin="20" />
      <Label Text="Name" />
      <Entry x:Name="usernameEntry" />

      <Label Text="Password" />
      <Entry IsPassword="true" x:Name="passwordEntry" />

      <Label Text="email" />
      <Entry x:Name="emailEntry"  Keyboard="Email" />

      <Label Text="{Binding err}"
             TextColor="#ff7c7c" />

      <Button Text="Sign up"
              Clicked="SignupBtnClicked" />

    </StackLayout>
  </ContentPage.Content>
</ContentPage>