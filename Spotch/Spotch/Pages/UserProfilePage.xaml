<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spotch.Pages.UserProfilePage">
  
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Save" />
  </ContentPage.ToolbarItems>
  
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>
        <AbsoluteLayout BackgroundColor="#ffffff">
          <Image Source="UserProfileBackground.jpg"
                 Aspect="AspectFill"
                 AbsoluteLayout.LayoutBounds="0,0,1,100"
                 AbsoluteLayout.LayoutFlags="XProportional,YProportional,WidthProportional" />

          <Image Source="Usericon_test.jpg"
                 AbsoluteLayout.LayoutBounds="0.5,60,80,80"
                 AbsoluteLayout.LayoutFlags="XProportional"/>
                
          <Label Text="Kosuke Doi" 
                 FontAttributes="Bold" 
                 FontSize="26"
                 TextColor="#333" 
                 HorizontalTextAlignment="Center" 
                 AbsoluteLayout.LayoutBounds="0.5,140,1,40" 
                 AbsoluteLayout.LayoutFlags="XProportional,WidthProportional" />
        
        </AbsoluteLayout>
      
        <StackLayout>
          <Label Text="Birthday"/>
          <Entry Text="1995/07/03"/>
        </StackLayout>
        
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>